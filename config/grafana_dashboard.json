{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Prometheus datasource",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "9.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "gauge", "name": "Gauge", "version": "" },
    { "type": "panel", "id": "table", "name": "Table", "version": "" }
  ],
  "id": null,
  "uid": "email-ingestion-dashboard",
  "title": "Email Ingestion System",
  "description": "Observability dashboard for the Email Ingestion producer & worker pipeline",
  "tags": ["email", "ingestion", "redis", "streams"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "refresh": "15s",
  "schemaVersion": 38,
  "version": 1,
  "time": { "from": "now-1h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": { "text": "Prometheus", "value": "Prometheus" },
        "hide": 0
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "title": "Overview",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false,
      "id": 100
    },
    {
      "id": 1,
      "title": "Emails Produced / s",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "ops"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(email_ingestion_emails_produced_total[1m])",
          "legendFormat": "produced/s",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Emails Processed / s",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "ops"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(email_ingestion_emails_processed_total[1m])",
          "legendFormat": "processed/s",
          "refId": "A"
        },
        {
          "expr": "rate(email_ingestion_emails_failed_total[1m])",
          "legendFormat": "failed/s",
          "refId": "B"
        }
      ]
    },
    {
      "id": 3,
      "title": "Totals",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "email_ingestion_emails_produced_total",
          "legendFormat": "Produced",
          "refId": "A"
        },
        {
          "expr": "email_ingestion_emails_processed_total",
          "legendFormat": "Processed",
          "refId": "B"
        },
        {
          "expr": "email_ingestion_emails_failed_total",
          "legendFormat": "Failed",
          "refId": "C"
        },
        {
          "expr": "email_ingestion_uptime_seconds",
          "legendFormat": "Uptime (s)",
          "refId": "D"
        }
      ]
    },
    {
      "title": "Latency",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "collapsed": false,
      "id": 101
    },
    {
      "id": 4,
      "title": "Processing Latency (p50 / p95 / p99)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "s"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(email_ingestion_processing_latency_seconds_bucket[5m]))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(email_ingestion_processing_latency_seconds_bucket[5m]))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(email_ingestion_processing_latency_seconds_bucket[5m]))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },
    {
      "id": 5,
      "title": "IMAP Poll Duration (p50 / p95 / p99)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "s"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(email_ingestion_imap_poll_duration_seconds_bucket[5m]))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(email_ingestion_imap_poll_duration_seconds_bucket[5m]))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(email_ingestion_imap_poll_duration_seconds_bucket[5m]))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },
    {
      "title": "Queues & Streams",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "collapsed": false,
      "id": 102
    },
    {
      "id": 6,
      "title": "Stream Depth",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 19 },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "blue", "mode": "fixed" },
          "unit": "short"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "email_ingestion_stream_depth",
          "legendFormat": "Main stream",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "title": "DLQ Depth",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 19 },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "red", "mode": "fixed" },
          "unit": "short"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "email_ingestion_dlq_depth",
          "legendFormat": "DLQ",
          "refId": "A"
        }
      ]
    },
    {
      "id": 8,
      "title": "DLQ Messages Sent (rate)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 19 },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "orange", "mode": "fixed" },
          "unit": "ops"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(email_ingestion_dlq_messages_total[5m])",
          "legendFormat": "DLQ messages/s",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Reliability",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
      "collapsed": false,
      "id": 103
    },
    {
      "id": 9,
      "title": "Circuit Breaker States",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 28 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short",
          "min": 0,
          "max": 2,
          "mappings": [
            { "type": "value", "options": { "0": { "text": "CLOSED" } } },
            { "type": "value", "options": { "1": { "text": "OPEN" } } },
            { "type": "value", "options": { "2": { "text": "HALF_OPEN" } } }
          ]
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "email_ingestion_circuit_breaker_state",
          "legendFormat": "{{ breaker_name }}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 10,
      "title": "Retries & Duplicates",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 28 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "ops"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(email_ingestion_backoff_retries_total[5m])",
          "legendFormat": "retries/s",
          "refId": "A"
        },
        {
          "expr": "rate(email_ingestion_idempotency_duplicates_total[5m])",
          "legendFormat": "duplicates/s",
          "refId": "B"
        },
        {
          "expr": "rate(email_ingestion_orphan_messages_claimed_total[5m])",
          "legendFormat": "orphans claimed/s",
          "refId": "C"
        }
      ]
    },
    {
      "id": 11,
      "title": "IMAP Polls",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 28 },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "green", "mode": "fixed" },
          "unit": "ops"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(email_ingestion_imap_polls_total[5m])",
          "legendFormat": "polls/s",
          "refId": "A"
        }
      ]
    },
    {
      "title": "System Info",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 36 },
      "collapsed": false,
      "id": 104
    },
    {
      "id": 12,
      "title": "Uptime",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 37 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "email_ingestion_uptime_seconds",
          "legendFormat": "Uptime",
          "refId": "A"
        }
      ]
    },
    {
      "id": 13,
      "title": "Build Info",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 6, "w": 16, "x": 8, "y": 37 },
      "targets": [
        {
          "expr": "email_ingestion_info",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "Value": true, "__name__": true },
            "renameByName": {}
          }
        }
      ]
    }
  ]
}
